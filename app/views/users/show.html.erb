<% if @admin %>
  <h1>Welcome to the Admin Panel!</h1>
  <hr>
  <%= link_to root_path do %>
    <i class="fas fa-caret-square-left"></i>&nbsp;Return to homepage
  <% end %>
  <hr>
  <div class="row">

    <!-- Modify Restaurant -->
    <div class="col-sm-6">
      <h2>Restaurant List</h2>
      <ul>
        <li>
          <%= link_to new_restaurant_path do %>
            <p>Add a restaurant</p>
          <% end %>
        </li>
      </ul>
    </div>

    <!-- Modify Users -->
    <div class="col-sm-6">
      <h2>Users</h2>
      <ul>
        <% @all_users.each do |user| %>
          <li>
            <h3><%= user.first_name %>&nbsp;<%= user.last_name %></h3>
            <p><em><%= user.email %></em></p>
            <% if user.admin %>
              <p>ADMIN</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <h1>My Profile</h1>
<% end %>
