<%= simple_form_for restaurant do |f| %>
  <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :category, required: true, collection: [
      "Chinese",
      "Japanese",
      "Korean",
      "Vietnamese",
      "Indian",
      "Thai",
      "Other"
      ] %>
    <%= f.input :address %>
    <%= f.input :district, required: true, collection: [
      "Atwater",
      "Chinatown",
      "Concordia",
      "Côte-des-Neiges",
      "Côte-Vertu",
      "Downtown",
      "Griffintown",
      "Notre-Dame-de-Grace",
      "Lachine",
      "LaSalle",
      "Le Sud-Ouest",
      "Mile-End",
      "Monkland Village",
      "Namur",
      "Outremont",
      "Parc-Extension",
      "Place-des-Arts",
      "Plateau",
      ] %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <hr>
    <%= f.submit class: 'btn-primary' %>
<% end %>
